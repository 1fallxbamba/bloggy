<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="452.0" prefWidth="812.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bloggy.bloggy.controllers.main.HomeController">
   <children>
      <Label fx:id="welcomeLabel" layoutX="263.0" layoutY="16.0" text="We host all kind of boring articles">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Button fx:id="newArticleButton" layoutX="17.0" layoutY="410.0" mnemonicParsing="false" onAction="#navigateToNewArticle" text="Post an article">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="editInfoButton" layoutX="354.0" layoutY="411.0" mnemonicParsing="false" text="Edit my info">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" cancelButton="true" layoutX="745.0" layoutY="415.0" mnemonicParsing="false" text="Exit">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <TableView fx:id="articlesTable" layoutX="17.0" layoutY="81.0" prefHeight="274.0" prefWidth="780.0">
        <columns>
          <TableColumn fx:id="articleTitleColumn" prefWidth="152.0" text="Title" />
           <TableColumn fx:id="articleContentColumn" prefWidth="426.0" text="Content" />
           <TableColumn fx:id="publicationDateColumn" prefWidth="193.0" text="Publication date" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
